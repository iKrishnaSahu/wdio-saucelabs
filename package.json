{
  "name": "wdio-saucelab-demo",
  "version": "1.0.0",
  "description": "WebdriverIO Demo Project",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:local",
    "test:local": "wdio run wdio.local.conf.ts",
    "test:sauce": "wdio run wdio.sauce.conf.ts",
    "test:sauce:chrome": "SAUCE_BROWSER_NAME=chrome SAUCE_PLATFORM_NAME='Windows 11' npm run test:sauce",
    "test:sauce:firefox": "SAUCE_BROWSER_NAME=firefox SAUCE_PLATFORM_NAME='Windows 11' npm run test:sauce",
    "test:sauce:edge": "SAUCE_BROWSER_NAME=microsoftedge SAUCE_PLATFORM_NAME='Windows 11' npm run test:sauce",
    "test:sauce:safari": "SAUCE_BROWSER_NAME=safari SAUCE_PLATFORM_NAME='macOS 13' npm run test:sauce",
    "test:sauce:android": "SAUCE_DEVICE_NAME='Google Pixel 6 Pro GoogleAPI Emulator' SAUCE_PLATFORM_NAME='Android' SAUCE_PLATFORM_VERSION='16.0' SAUCE_BROWSER_NAME='Chrome' npm run test:sauce",
    "test:sauce:ios": "SAUCE_DEVICE_NAME='iPhone 16 Pro Simulator' SAUCE_PLATFORM_NAME='iOS' SAUCE_PLATFORM_VERSION='16.2' SAUCE_BROWSER_NAME='Safari' npm run test:sauce"
  },
  "keywords": [
    "wdio",
    "webdriverio",
    "test",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@wdio/cli": "^8.24.0",
    "@wdio/local-runner": "^8.24.0",
    "@wdio/mocha-framework": "^8.24.0",
    "@wdio/sauce-service": "^9.23.3",
    "@wdio/spec-reporter": "^8.24.0",
    "dotenv": "^17.2.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  }
}